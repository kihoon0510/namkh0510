package intern;

public class Round {
	private double d;
	private int p,v;
	
	
	public Round(double d, int point) {
		// TODO Auto-generated constructor stub
		this.d = d;
		this.p = point;
	}
	
	public void getValue() {
		if(p>0) {
			for(int i=1;i<p;i++) {
				d=d/10;
			}
			v=(int)(d%10);
			if(v>4) {
				d+=10;
				d=d/10;
				d=(int)d;
			}else {
				d=(int)d;
			}
			for(int i=1;i<p;i++) {
				d=d*10;
			}
		}
		
		System.out.println("p: "+p+"자리수의 반올림 값:"+d);
		
	}
	
}
